@page
@model WebApplication1.Pages.CaseDetails.CaseModel
@{
    ViewData["Title"] = "Case Transactions";
}
<p>
    <div style="left:0; position:absolute">
        <h2>Case Reference </h2>
    </div>
    <div style="right:0; position:absolute">
        <h2>@Model.SelectedCase.CaseId</h2>
    </div>
</p>
<br />       
<p>
    <div>
        <strong>Summary table</strong>
    </div>
</p>
<p>
    <div>
        <strong>Service Requests</strong>
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Status</th>
                    <th>Amount</th>
                    <th>Request Reference</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var sr in Model.SelectedCase.ServiceRequests)
                {
                    <tr>
                        <td>@sr.Status</td>
                        <td>@sr.InvoiceAmount</td>
                        <td>@sr.Reference</td>
                        <td>@if (sr.CanPay)
                            {
                                       <a href="AddPayment?caseId=@Model.SelectedCase.CaseId&sr=@sr.Reference">
                                     Add Payment
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</p>
<p>
    <div>
        <strong>Payments</strong>
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Status</th>
                    <th>Amount</th>
                    <th>SR Reference</th>
                    <th>Payment Reference</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var sr in Model.SelectedCase.ServiceRequests)
                {
                    @foreach (var pay in sr.Payments)
                    {
                        <tr>
                            <td>@pay.Status</td>
                            <td>@pay.Amount</td>
                            <td>@sr.Reference</td>
                            <td>@pay.Reference</td>
                            
                     </tr>
                    }

                }
            </tbody>
        </table>
    </div>
</p>
<p>
    <div style="clear:both">
        <strong>Refunds</strong>
    </div>
</p>
